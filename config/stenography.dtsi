#include "keypos.h"

/ {
    macros {
       compatible = "zmk,macros";

       m_because: m_because {
          #binding-cells = <0>;
          wait-ms = <0>;
          tap-ms = <10>;
          bindings = <&macro_tap &kp B &kp E &kp C &kp A &kp U &kp S &kp E &kp SPACE>;
       };
    };
  
    combos {
        compatible = "zmk,combos";

        c_because {
            #binding-cells = <0>;
            timeout-ms = <50>;
            key-positions = <P_E P_B>; 
            bindings = <&m_because>;
        };
    };
};


